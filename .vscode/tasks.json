{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CopyInputs",
			"command": "xcopy ${workspaceFolder}\\DaysInput ${workspaceFolder}\\Tests\\bin\\Debug\\netcoreapp3.1\\DaysInput /E /I /y",
			"type": "shell"
		},
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/AoCSolver2020/AoCSolver2020.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"dependsOn": [
				"CopyInputs"
			]
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/AoCSolver2020/AoCSolver2020.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"${workspaceFolder}/AoCSolver2020/AoCSolver2020.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "RunTest",
			"command": "dotnet",
			"type": "process",
			"args": [
				"test",
				"${workspaceFolder}/Tests/AoCSolver2020/Tests.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
	]
}